@model Product

<div class="card card-outline-primary m-1 p-1">
            <div class="bg-faded p-1">
                <h4>
                    @Model.ProductName
                    <span class="badge rounded-pill bg-primary text-white"
                            style="float:right"><small>@Model.ProductPrice.ToString("c")</small></span>
                </h4>
            </div>
            <div class="card-text p-1">@Model.ProductDescription</div>
        </div>