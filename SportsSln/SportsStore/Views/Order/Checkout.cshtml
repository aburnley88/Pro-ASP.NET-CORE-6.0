@model Order

<h2>Check Out Now</h2>
<p>Please enter yuor details, and we'll ship your order ASAP</p>

<div asp-validation-summary="All" class="text-danger"></div>

<form action="Checkout" method="post">
    <h3>Ship To</h3>
    <div class="form-group">
        <label>Name:</label><input asp-for="Name" class="form-control" />
    </div>
  <div class="form-group">
        <label>Address Line1:</label><input asp-for="Line1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Address Line2:</label><input asp-for="Line2" class="form-control" />
    </div>
      <div class="form-group">
        <label>Address Line3:</label><input asp-for="Line3" class="form-control" />
    </div>
    <div class="form-group">
        <label>City:</label><input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label>State:</label><input asp-for="State" class="form-control" />
    </div>
    <div class="form-group">
        <label>Country:</label><input asp-for="Country" class="form-control" />
    </div>
    <h3>Options</h3>
    <div class="checkbox">
        <label>
            <input class="btn btn-primary" type="submit" value="Complete Order" />
        </label>
    </div>
</form>